{
    "name": "prooph/psb-zeromq-producer",
    "description": "ZeroMQ Message Producer for Prooph Service Bus",
    "homepage": "http://getprooph.org/",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Bradley Weston",
            "email": "me@bweston.me"
        },
        {
            "name": "Alexander Miertsch",
            "email": "contact@prooph.de",
            "homepage": "http://www.prooph.de"
        }
    ],
    "keywords": [
        "prooph",
        "CQRS",
        "messaging",
        "zeromq"
    ],
    "require": {
        "php": ">=5.5",
        "ext-zmq": "*",
        "prooph/service-bus" : "^4.0",
        "react/promise": "~2."
    },
    "require-dev": {
        "phpunit/phpunit": "~4.7",
        "fabpot/php-cs-fixer": "1.7.*",
        "satooshi/php-coveralls": "dev-master",
        "container-interop/container-interop" : "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Prooph\\ServiceBus\\Message\\ZeroMQ\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ProophTest\\ServiceBus\\": "vendor/prooph/service-bus/tests/",
            "ProophTest\\ServiceBus\\Message\\ZeroMQ\\": "./tests"
        }
    },
    "suggest": {
        "container-interop/container-interop": "Allows use of ZMQ producer factory."
    }
}
